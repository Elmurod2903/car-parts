<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uz.elmurod.carparts">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_car_4"
        android:label="@string/app_name"
        android:name=".app.App"
        android:roundIcon="@mipmap/ic_launcher_car_4_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Carparts">
        <activity
            android:theme="@style/Theme.Carparts.ActionBar"
            android:name=".AddCarPartActivity"
            android:exported="true" />
        <activity
            android:name=".DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.Carparts.ActionBar" />
        <activity
            android:name=".Home"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Carparts.ActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Carparts.ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Carparts.ActionBar" />
        <activity
            android:name=".VerifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Carparts.ActionBar" />
    </application>

</manifest>